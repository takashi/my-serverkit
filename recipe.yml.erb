resources:
  - type: command
    script: brew update
  <%- homebrew_package_names.each do |homebrew_package_name| -%>
  - type: homebrew_package
    name: <%= homebrew_package_name %>
  <%- end -%>
  <%- homebrew_cask_package_names.each do |homebrew_cask_package_name| -%>
  - type: homebrew_cask_package
    name: <%= homebrew_cask_package_name %>
  <%- end -%>
  - type: login_items
    path: /Applications/Karabiner.app
    hidden: true
  <%- login_item_names.each do |login_item_name| -%>
  - type: login_items
    path: /Users/takehiro/Applications/<%= login_item_name %>.app
    hidden: true
  <%- end -%>
  - type: defaults
    domain: com.apple.dock
    key: autohide
    value: 1
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-apps
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-others
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.finder
    key: AppleShowAllFiles
    type_option: -bool
    value: "YES"
  - type: defaults
    host: current
    key: com.apple.keyboard.modifiermapping.1452-601-0
    type_option: -array
    value: "<dict><key>HIDKeyboardModifierMappingSrc</key><integer>0</integer><key>HIDKeyboardModifierMappingDst</key><integer>2</integer></dict>"
  - type: karabiner
    key: repeat.wait
    value: 45
    recheck_script: "true"
  - type: karabiner
    key: repeat.initial_wait
    value: 10
    recheck_script: "true"
  - type: karabiner
    key: option.extra_cursor_optionL_kjhl
    value: 1
    recheck_script: "true"
  - type: karabiner
    key: remap.jis_optionL2optionL_eisuu
    value: 1
    recheck_script: "true"
  - type: karabiner
    key: remap.jis_optionR2optionR_kana
    value: 1
    recheck_script: "true"
  - type: command
    check_script: "finger -l | grep -E 'Shell: /bin/zsh$'"
    script: sudo chsh -s /bin/zsh takehiro
  - type: git
    repository: https://github.com/robbyrussell/oh-my-zsh.git
    path: /Users/takehiro/.oh-my-zsh
    status: updated
  - type: git
    repository: https://github.com/take/my-serverkit.git
    path: /Users/takehiro/projects/my-serverkit
  - type: git
    repository: https://github.com/take/dotfiles.git
    path: /Users/takehiro/projects/dotfiles
<%- dotfiles.each do |dotfile| -%>
  - type: symlink
    destination: /Users/takehiro/projects/dotfiles/<%= dotfile %>
    source: /Users/takehiro/<%= dotfile %>
<%- end -%>
  - type: rbenv_ruby
    version: 2.2.1
    global: true
handlers:
  - id: restart_dock
    type: command
    script: killall Dock
  - id: restart_finder
    type: command
    script: killall Finder
